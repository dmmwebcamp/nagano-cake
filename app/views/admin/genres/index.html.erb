<div class="container">
  <div class=""            
    <h3>ジャンル一覧・追加</h3>
    
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <h4>ジャンル名</h4>
            <%= f.text_field :name %>
            <%= f.submit '新規登録' %>
    <% end %>
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ジャンル</th>
        <tr>
      </thead>
    
      <tbody>
          <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
              　<td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
                <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete %></td>
            </tr>
           <% end %>
      </tbody>