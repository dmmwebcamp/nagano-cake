<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>会員一覧</h2>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th class="table-active">会員ID</th>
            <th class="table-active">氏名</th>
            <th class="table-active">メールアドレス</th>
            <th class="table-active">ステータス</th>

          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td class="align-middle"><%= customer.id %></td>
              <td class="align-middle"><%= link_to customer.customer_name, edit_admin_customer_path(customer.id) %></td>
              <td class="align-middle"><%= customer.email %></td>
              <td class="align-middle">
                <% if customer.is_leaved == false %>
                  <p class="text-success font-weight-bold">有効</p>

                <% else %>
                  <p class="text-secondary">退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>