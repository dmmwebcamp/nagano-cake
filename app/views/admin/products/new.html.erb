<h1>商品新規登録</h1>

<%= form_with model: @product, url: admin_products_path(@product.id), method: :post, local:true do |f| %>

    <h3>商品画像</h3>
    <%= f.attachment_field :image %>
    <h3>商品名</h3>
    <%= f.text_field :name %>
    <h3>商品説明</h3>
    <%= f.text_field :description %>
    <h3>ジャンル</h3>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    <h3>税抜価格</h3>
    <%= f.text_field :tax_excluding_price %>
    <h3>販売ステータス</h3>
     <div>
      <%= f.radio_button :is_saled, true %>
      <%= f.label :is_saled, '販売中', value: true %>
     </div> 
     <div>
      <%= f.radio_button :is_saled, false %>
      <%= f.label :is_saled, '販売停止中', value: false %>
    </div> 


  <%= f.submit '新規登録' %>
<% end %>