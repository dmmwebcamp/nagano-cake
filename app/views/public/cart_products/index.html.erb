<div class="container">
  <div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
  	<div class="title-box">
      <h1 class="title">Shopping Cart <i class="fas fa-cart-arrow-down"></i></h1>
    </div>

    <% if @cart_products.count == 0 %>
      <p>カートに商品がありません。</p>
      <button type="button" class="btn btn-outline-secondary"><%= link_to '買い物を続ける', root_path %></button>
    <% else %>
  <table class="table table-hover">
	  <caption>
	  	<button type="button" class="btn btn-outline-danger">
	  
	  	</button>
	    <button type="button" class="btn btn-outline-secondary"><%= link_to '買い物を続ける', root_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to '情報入力に進む', new_order_path %></button>
      </caption>
	  <thead>
		  <tr>
		  	  <th></th>
			  <th>商品名</th>
			  <th>単価(税込)</th>
			  <th>数量</th>
			  <th>小計</th>
			  <th></th>
		  </tr>
	  </thead>
	  <tbody>
		  <tr>
		  	<% @sum = 0 %>
		  	<% @subtotal = 0 %>
		  	<% @num = 0 %>
		  	<% @customer.cart_products.each do |cart_product| %>
		
		  	  <td>
		  	  	<%= link_to product_path(cart_product.product) do %>
        <%= attachment_image_tag(cart_product.product, :image, :fill, 100, 100, fallback: "no_img.jpg") %>
   
               </td>
			  <td><%= cart_product.product.name %></td>
			  <td><%= cart_product.product.tax_excluding_price %>円</td>
			  <td>
			    <%= form_with model: cart_product, url: cart_product_path(cart_product.id), local: true do |f| %>
                  <%= f.number_field :quantity, value: cart_product.quantity, min:1, max:99  %>
                  <%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
			  <% @subtotal = cart_product.product.tax_excluding_price * cart_product.quantity %>
			   <td><%= @subtotal.to_s(:delimited, delimiter: ',') %></td>
			    <% @sum += @subtotal %>
			    <% @num += cart_product.quantity %>
			  <td>
			  	<%= link_to cart_product_path(cart_product.id), method: :delete do %>
			  	  <i class="far fa-trash-alt"></i>
			  	<% end %>
			  <% end %>
			  </td>
		  </tr>
		    <% end %>
	  </tbody>
  </table>

  <table class="table table-hover">
    <tr>
      <td class="col-xs-6"></td>
      <td class="col-xs-1"><strong>商品計</strong></td>
      <td class="col-xs-1"><%= @num %>点</td>
      <td class="col-xs-3"><strong>合計金額　</strong><%= @sum.to_s(:delimited, delimiter: ',') %>円</td>
      <td class="col-xs-1"><button type="button" class="btn btn-outline-secondary"><%= link_to '購入手続きへ', new_order_path %></button></td>
    </tr>
  </table>
  <% end %>
    </div>
  <div class="col-xs-1"></div>
  </div>
</div>