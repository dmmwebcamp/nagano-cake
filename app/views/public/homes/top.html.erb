    <div class="mx-auto">
      <div class="top">
        <% if customer_signed_in? %>
          <% @product.each do |product| %>
            <%= link_to product_path(product) do %>
              <%= attachment_image_tag product, :image, :fill, 500, 300, fallback: "no_image.jpg" %>
            <% end %>
          <% end %>
        <% else %>
          <% @product.each do |product| %>
            <%= link_to product_path(product) do %>
