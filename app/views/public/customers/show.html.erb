<div class="container">
  <div class="row my-3">
    <div class="col-sm-5 px-sm-0 offset-sm-1">
      <h3>マイページ</h3>
    </div>
  </div>
  <div class="container">
    <div class="row my-3">
      <div class="col-sm-12 px-sm-0 offset-sm-1">
        <table class='table'>
          <tr>
            <th style="border:none;">登録情報</th>
            <th style="border:none;"><%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-sm btn-success" %></th>
          </tr>

          <div class="row my-3">
            <div class="col-sm-5 px-sm-0 offset-sm-1">
              <table class="table table-bordered">
                <tr>
                  <th class="table-active">氏名</th>
                  <th><%= @customer.last_name %><%= @customer.first_name %></th>
                </tr>
                <tr>
                  <th class="table-active">フリガナ</th>
                  <th><%= @customer.kana_last_name %><%= @customer.kana_first_name %></th>
                </tr>
                <tr>
                  <th class="table-active">郵便番号</th>
                  <th><%= @customer.postal_code %></th>
                </tr>
                <tr>
                  <th class="table-active">住所</th>
                  <th><%= @customer.address %></th>
                </tr>
                <tr>
                  <th class="table-active">電話番号</th>
                  <th><%= @customer.phone_number %></th>
                </tr>
                <tr>
                  <th class="table-active">メールアドレス</th>
                  <th><%= @customer.email %></th>
                </tr>
              </table>
            </div>
          </div>
      </div>
    </div>
  </div>
    <div class="container">
      <div class="row my-3">
        <div class="col-sm-12 px-sm-0 offset-sm-1">
          <table class='table'>
            <tr>
              <th style="border:none;">配送先</th>
              <th style="border:none;"><%= link_to '一覧を見る',destinations_path, class: "btn btn-sm btn-primary" %></th>
            </tr>
            <tr>
              <th style="border:none;">注文履歴</th>
              <th style="border:none;"><%= link_to '一覧を見る', orders_path, class: "btn btn-sm btn-primary" %></th>
            </tr>
          </table>
        </div>
      </div>
    </div>
</div>