<div class="container mt-3 mr-5">
 <div style="text-align:center">
  <div class="row">
    <div class="col-sm-10">
       <h2>商品一覧（全 <%= @products.count %> 件）</h2>
    </div>
       <% @products.each do |product| %>
       <div class="card border-light text-dark" style="width: 15rem; .border.border-top-0">
           <%= link_to product_path(product.id) do %>
           <%= attachment_image_tag product, :image, :fill, 180, 140, fallback: "no_image.jpg"%>
           <% end %>
           <%= link_to product.name , product_path(product.id) %>
           ￥<%= product.tax_excluding_price.to_s(:delimited) %>
       </div>
       <% end %>
  </div>
   <div class="row mt-3">
    <div class="col">
       <%= paginate @products %>
    </div>
  </div>
</div>
</div>